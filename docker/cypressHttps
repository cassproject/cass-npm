FROM cypress/included:10.8.0

WORKDIR code
COPY package.json package.json
RUN npm install

COPY ca.crt ca.crt
COPY client.crt client.crt
COPY client.key client.key
COPY index.js index.js
COPY src src
COPY cypressWebpack cypressWebpack
COPY cypressBrowserify cypressBrowserify
COPY cypressWebpack.config.js cypressWebpack.config.js
COPY cypressBrowserify.config.js cypressBrowserify.config.js
ENTRYPOINT cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressBrowserify.config.js --browser edge && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressBrowserify.config.js --browser chrome && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressBrowserify.config.js --browser firefox && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressBrowserify.config.js && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressWebpack.config.js --browser edge && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressWebpack.config.js --browser chrome && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressWebpack.config.js --browser firefox && cypress run -e CASS_LOOPBACK=https://host.docker.internal/api/ --config-file cypressWebpack.config.js